<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    tools:ignore="MergeRootFrame"
    android:keepScreenOn="true">

    <SurfaceView
        android:id="@+id/cameraView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/record_button"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:stateListAnimator="@null"
        android:layout_marginEnd="32dp"
        android:background="@drawable/ic_record_start"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@id/cameraView"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_live_push_home"
        android:layout_width="37dp"
        android:stateListAnimator="@null"
        android:layout_height="37dp"
        android:layout_marginStart="21dp"
        android:background="@drawable/ic_live_push_home"
        app:layout_constraintBottom_toTopOf="@id/bt_live_push_scoreboard"
        app:layout_constraintLeft_toLeftOf="@id/cameraView"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_live_push_scoreboard"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:stateListAnimator="@null"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_scoreboard"
        app:layout_constraintBottom_toTopOf="@id/bt_live_push_size"
        app:layout_constraintLeft_toLeftOf="@id/bt_live_push_home"
        app:layout_constraintTop_toBottomOf="@id/bt_live_push_home"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_live_push_size"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:stateListAnimator="@null"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_largesize_clickable"
        app:layout_constraintBottom_toTopOf="@id/bt_live_push_zoom"
        app:layout_constraintLeft_toLeftOf="@id/bt_live_push_scoreboard"
        app:layout_constraintTop_toBottomOf="@id/bt_live_push_scoreboard" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_live_push_zoom"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/ic_zoom_in_one_unselect"
        android:gravity="center"
        android:textAllCaps="false"
        android:stateListAnimator="@null"
        android:textColor="@color/white"
        android:textSize="8dp"
        app:layout_constraintBottom_toTopOf="@id/bt_live_push_setting"
        app:layout_constraintLeft_toLeftOf="@id/bt_live_push_home"
        app:layout_constraintTop_toBottomOf="@id/bt_live_push_size" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/bt_live_push_setting"
        android:stateListAnimator="@null"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="38dp"
        android:background="@drawable/ic_camera_setting_unselect"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/bt_live_push_home"
        app:layout_constraintTop_toBottomOf="@id/bt_live_push_zoom" />


    <!--录制计时器-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_count_down"
        android:layout_width="106dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_black_20alpha_6raduis_button"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="@id/bt_live_push_zoom"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="38dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_shape_red_circle"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_marginEnd="9dp"
            android:src="@drawable/shape_red_circle"
            android:visibility="gone" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_camera_pose_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:00:00"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <!--电池-->
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/ll_battery"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="34dp"
        android:background="@drawable/shape_black_20alpha_6raduis_button"
        android:gravity="center"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:orientation="horizontal"
        app:layout_constraintRight_toRightOf="@id/cameraView"
        app:layout_constraintTop_toTopOf="@id/cameraView">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_remote"
            android:layout_width="wrap_content"
            android:layout_marginEnd="3dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_remote_disconnect"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_remote_battery"
            android:layout_width="25dp"
            android:layout_marginEnd="10dp"
            android:layout_height="12dp"
            android:visibility="gone"
            android:src="@drawable/ic_remote_battery_100"
            />
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone"
            />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_battery"
            android:layout_width="25dp"
            android:layout_height="12dp"
            android:src="@drawable/ic_battery_100" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_battery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:textColor="@color/white"
            android:textSize="11dp" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_live_hide"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toBottomOf="@id/cameraView"
        app:layout_constraintRight_toRightOf="@id/cameraView" />
    <androidx.appcompat.widget.AppCompatCheckBox
        android:id="@+id/cb_live_mute"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="38dp"
        android:button="@null"

        app:layout_constraintBottom_toBottomOf="@id/cameraView"
        app:layout_constraintRight_toLeftOf="@id/ib_live_hide" />
    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_track_off"
        android:layout_width="63dp"
        android:layout_height="63dp"
        android:visibility="gone"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="38dp"
        app:layout_constraintBottom_toBottomOf="@id/cameraView"
        app:layout_constraintRight_toLeftOf="@id/cb_live_mute" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_start_live"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toRightOf="@id/ll_battery"
        app:layout_constraintTop_toBottomOf="@id/ll_battery"
        app:layout_goneMarginEnd="0dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_live_share"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toLeftOf="@id/ib_start_live"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/ll_battery" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/ib_live_switch_camera"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginTop="4dp"
        app:layout_constraintRight_toLeftOf="@id/ib_live_share"
        android:layout_marginEnd="4dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/ll_battery" />


</androidx.constraintlayout.widget.ConstraintLayout>
